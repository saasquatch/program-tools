{
  "name": "lerna-test-vanilla",
  "version": "0.0.22",
  "description": "Vanilla component library for the SaaSquatch platform",
  "main": "dist/widget-components.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "browser": "dist/widget-components.js",
  "scripts": {
    "build": "stencil build --prerender",
    "build:watch": "nodemon -w src --exec \"npm run build\"",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache"
  },
  "dependencies": {
    "@stencil/core": "^0.2.2",
    "@types/faker": "^4.1.2",
    "clipboard": "^1.7.1",
    "faker": "^4.1.0",
    "intl-messageformat": "^2.2.0",
    "intl-relativeformat": "^2.1.0"
  },
  "devDependencies": {
    "@stencil/dev-server": "latest",
    "@stencil/utils": "latest",
    "@types/clipboard": "^1.5.36",
    "@types/faker": "^4.1.2",
    "@types/intl-messageformat": "^1.3.0",
    "@types/jest": "^21.1.1",
    "graphql": "^0.12.3",
    "jest": "^21.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saasquatch/program-tools.git"
  },
  "author": "SaaSquatch Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saasquatch/program-tools"
  },
  "homepage": "https://github.com/saasquatch/program-tools",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
