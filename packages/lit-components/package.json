{
  "name": "@saasquatch/lit-components",
  "version": "0.0.0-7",
  "description": "Web components built with Lit and Haunted for state management",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "raisins": "dist/docs/raisins.json",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "author": "SaaSquatch",
  "license": "MIT",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist && npm run generate:raisins",
    "generate:raisins": "tsx scripts/generate-raisins.ts",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "web-components",
    "lit",
    "haunted",
    "vite"
  ],
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "dependencies": {
    "@raisins/schema": "^1.2.0",
    "@saasquatch/component-boilerplate": "^1.6.10-3",
    "@saasquatch/universal-hooks": "^1.0.1",
    "@shoelace-style/shoelace": "^2.20.1",
    "haunted": "^6.1.0",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@storybook/addon-a11y": "^10.1.0",
    "@storybook/addon-docs": "^10.1.0",
    "@storybook/addon-vitest": "^10.1.0",
    "@storybook/web-components-vite": "^10.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^10.1.0",
    "playwright": "^1.57.0",
    "prettier": "^3.3.2",
    "storybook": "^10.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.0",
    "vitest": "^4.0.14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saasquatch/program-tools.git",
    "directory": "packages/lit-components"
  }
}
