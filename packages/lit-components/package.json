{
  "name": "@saasquatch/lit-components",
  "version": "0.0.0",
  "description": "Web components built with Lit and Haunted for state management",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "keywords": [
    "web-components",
    "lit",
    "haunted",
    "vite"
  ],
  "author": "SaaSquatch",
  "license": "MIT",
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "dependencies": {
    "@saasquatch/component-boilerplate": "^1.6.10-3",
    "@saasquatch/universal-hooks": "^1.0.1",
    "haunted": "^6.1.0",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3",
    "vite": "^5.4.0"
  }
}
